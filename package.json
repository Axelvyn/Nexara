{
  "name": "zenjira",
  "version": "1.0.0",
  "description": "AI-Powered Jira Management Platform",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:frontend": "cd frontend && npm run start",
    "start:backend": "cd backend && npm start",
    "format": "prettier --write .",
    "prepare": "husky install",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "install:all": "npm install && npm run install:frontend && npm run install:backend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "lint": "npm run lint:frontend",
    "lint:frontend": "cd frontend && npm run lint",
    "clean": "npm run clean:frontend && npm run clean:backend",
    "clean:frontend": "cd frontend && rm -rf node_modules .next",
    "clean:backend": "cd backend && rm -rf node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^8.0.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "prettier --write"
  },
  "keywords": [
    "jira",
    "automation",
    "ai",
    "project-management",
    "development-tools"
  ],
  "author": "Zenjira Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/zenjira.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/zenjira/issues"
  },
  "homepage": "https://github.com/your-org/zenjira#readme"
}
